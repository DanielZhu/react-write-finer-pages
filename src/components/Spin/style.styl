$spin-width = 150px

.spin-wrapper
  position: fixed
  left: "calc(50% - %s)" % ($spin-width / 2)
  top: 30%
  text-align: center
  background-color: #888
  color: #fff
  font-size: 1.4rem
  width: $spin-width
  min-height: 60px
  border-radius: 5px
  padding: 5px 10px 15px
  .spin-icon
    position: relative
    margin: 10px auto
    width: 72px
    height: 72px
    line-height: 72px
  .spin-text
    position: relative
