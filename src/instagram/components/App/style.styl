body
  color: #262626
  background-color: #fafafa
  height: 100%
.instagram-skeleton
  position: relative
  display: flex
  flex-direction: column
  min-height: 100%
  background-color: #fafafa
  .instagram-body
    display: flex
    flex-grow: 1
    flex-shrink: 0
    flex-direction: column
    flex-basis: auto
    order: 2
header.ins-header
  position: relative
  width: 100%
  z-index: 100
  background-color: #fff
  border-bottom: 1px solid #dbdbdb
  padding: 26px 30px
  order: 1
footer
  position: relative
  padding: 10px 0 10px 20px
  height: 70px
  order: 3

