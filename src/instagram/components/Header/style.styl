.ins-header-wrapper
  position: relative
  height: 35px
  margin: 0 auto
  display: flex
  align-items: center
  justify-content: space-between
  ul
    li
      display: inline-block
      margin 0 0 0 10px
      position: relative
  .ins
    &-logo
      height: 35px
      width: 176px
      background: url('./imgs/logo.png') no-repeat
      background-size: 100%
      text-indent -9999em
    &-middle-placeholder
      width: 300px
      margin-right: 10px
      .search-box
        position: relative
        width: 85%
        height: 30px
        text-align: center
        color: #aaa
        border-radius: 2px
        border: 1px solid #ddd
    &-fav-menu
      display: none
      position: absolute
      top: 20px
      right: -50px
      border: 1px solid #ddd
      width: 300px
      height: 250px
      overflow-x: hidden
      overflow-y: auto
      background-color: #fff
      padding: 10px
      border-radius: 4px
    &-nickname
      color: #003569
      display: inline !important
      font-weight: 400
      padding-right: 2px
