$primaryColor = #026aa7
$white = #fff

$headerHeight = 30
$btnHeight = 30

$headerPadding = unit(5, px)

.trello-header
  position: absolute
  top: 0
  left: 0
  right: 0
  line-height: unit($headerHeight, px)
  background-color: $primaryColor
  padding: 5px
  z-index: 10
  font-size: 1.6rem
  a
    &:active, &:hover, &:link
      color: #fff
.trello-board
  height: 30px
  padding-left: 5px
  .suffix-icon
    position: absolute
    height: 100%
  .label
    margin-left: 35px
.trello-search-bar
  float: left
  margin: $headerPadding
  height: unit($btnHeight, px)
  &::after
    content ''
    color: #fff
    position: absolute
    right: $headerPadding + 4
    top: 12px
    width: 16px
    height: 16px
    line-height: 16px
    background-image: url('../../../assets/icons/search.png')
    background-size: 16px 16px
    background-position: 0 0
    background-repeat: no-repeat
    border-top-right-radius: 3px
    border-bottom-right-radius: 3px
  input
    position: relative
    height: 100%
    padding: 0 (18 + 8)px 0 8px
    border-radius: 3px
    border: none
    color: #fff
    background-color: rgba(255, 255, 255, .22)
.trello-left-toolbar
  position: absolute
  left: 0
  top: 0
  z-index: 2
  .trello-btn, .trello-icon-btn
    margin: $headerPadding $headerPadding 0 8px
.trello-right-toolbar
  position: absolute
  right: 0
  top: 0
  z-index: 2
  .trello-btn, .trello-icon-btn
    margin: $headerPadding 8px 0 0
.trello-logo
  display: inline-block
  text-align: center
  color: darken(#fff, 20%)
  opacity: .8
  font-size: 2rem
  vertical-align: middle
  line-height: unit($headerHeight, px)
  width: 100%
  z-index: 1
  letter-spacing: 2px
.trello-btn-new
  font-size: 1.5rem
.trello-btn-account
  padding-left: 35px
  .avatar
    position: absolute
    color: #666
    left: 0
    top: 0
    width: 30px
    height: 30px
    background: rgba(255, 255, 255, .2)
    border-top-left-radius: 3px
    border-bottom-left-radius: 3px
