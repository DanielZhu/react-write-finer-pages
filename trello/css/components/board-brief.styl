.trello-board-brief
  width: 25%
  float: left
  padding: 0 15px 15px 0
  @media only screen and (max-width: 1280px) and (min-width: 901px)
    width: 25%
  @media only screen and (max-width: 900px) and (min-width: 751px)
    width: 33.33%
  @media only screen and (max-width: 750px)
    width: 100%
  .brief-detail
    display: block
    min-height: 100px
    background-color: darken(#bbb, 30%)
    padding: 5px 10px
    border-radius: 3px
  .brief-detail-name
    color: #fff
    font-size: 1.6rem
    font-weight: bold
  .brief-detail-sub-name
    color: #fff
    opacity: .6
    line-height: 1.3
    font-size: 1.2rem
    margin-top: 5px
