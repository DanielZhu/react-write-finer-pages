.trello-board-brief
  width: 25%
  float: left
  padding: 0 15px 15px 0
  @media only screen and (max-width: 1280px) and (min-width: 901px)
    width: 25%
  @media only screen and (max-width: 900px) and (min-width: 751px)
    width: 33.33%
  @media only screen and (max-width: 750px)
    width: 100%
  .board-star-normal
    position: absolute
    top: 5px
    right: -15px
    width: 18px
    height: 18px
    line-height: 18px
    background-image: url('../../../res/icons/star.png')
    background-size: 18px 18px
    background-position: 0 0
    background-repeat: no-repeat
    transition: all .15s ease
    opacity: 0
    &.board-star-on
      right: 10px
      opacity: 1
      background-image: url('../../../res/icons/star-active.png')
  .board-cover
    position: absolute
    width: 100%
    height: 100%
    top: 0
    left: 0
    background-color: rgba(0, 0, 0, 0)
    &:hover
      background-color: rgba(0, 0, 0, .1)
  .brief-detail
    position: relative
    display: block
    min-height: 100px
    background-color: darken(#bbb, 30%)
    padding: 5px 10px
    border-radius: 3px
    overflow: hidden
    &:hover
      .board-star-normal
        opacity: 1
        right: 10px
  .board-create-new
    display: flex
    position: relative
    text-align: center
    align-items: center
    justify-content: center
    .board-create-new-tip
      vertical-align: middle
      font-size: 1.5rem
      color: #777
  .brief-detail-name
    color: #fff
    font-size: 1.6rem
    font-weight: bold
    padding-right: 15px
  .brief-detail-sub-name
    color: #fff
    opacity: .6
    line-height: 1.3
    font-size: 1.2rem
    margin-top: 5px
