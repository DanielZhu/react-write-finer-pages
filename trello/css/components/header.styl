$primaryColor = #026aa7
$white = #fff

$headerHeight = 30
$btnHeight = 30

$headerPadding = unit(5, px)
.trello-btn
  position: relative
  background-color: $primaryColor
  color: $white
  font-weight: bolder
  text-align: center
  line-height: unit($btnHeight, px)
  background: linear-gradient(to bottom,rgba(255,255,255,.3) 0,rgba(255,255,255,.2) 100%)
  margin: $headerPadding
  padding: 0 10px
  border-radius: 3px

.trello-header
  position: absolute
  top: 0
  left: 0
  right: 0
  line-height: unit($headerHeight, px)
  background-color: $primaryColor
  padding: 5px
  z-index: 10
  a
    &:active, &:hover, &:link
      color: #fff

.trello-board
  float: left
  left: 0
  top: 0
  &::before
    content 'pic'
    color: #666
    position: relative
    background: #fff
    width: 20px
    line-height: 20px
    margin-right: 5px
    display: inline-block
    border-radius: 3px
.trello-search-bar
  float: left
  margin: $headerPadding
  margin-right: 0
  height: unit($btnHeight, px)
  &::after
    content 'Go'
    color: #fff
    position: absolute
    right: 5px
    top: 10px
    width: 20px
    height: 20px
    line-height: 20px
    border-top-right-radius: 3px
    border-bottom-right-radius: 3px
  input
    position: relative
    height: 100%
    padding: 0 5px
    border-radius: 3px
    border: none
    background-color: rgba(255, 255, 255, .22)
.trello-left-toolbar
  position: absolute
  left: 0
  top: 0
  z-index: 2
.trello-right-toolbar
  position: absolute
  right: 0
  top: 0
  z-index: 2
  .trello-btn
    float: left
.trello-logo
  display: inline-block
  text-align: center
  color: darken(#fff, 20%)
  opacity: .8
  font-size: 2rem
  vertical-align: middle
  line-height: unit($headerHeight, px)
  width: 100%
  z-index: 1
  letter-spacing: 2px
.trello-btn-new
  font-size: 1.5rem
.trello-btn-account
  padding-left: 35px
  &::before
    content 'MD'
    color: #666
    position: absolute
    left: 0
    top: 0
    width: 30px
    height: 30px
    background: #ddd
    border-top-left-radius: 3px
    border-bottom-left-radius: 3px
